@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <section class="vh-100">
        <div class="container-fluid">
            <div class="row d-flex align-items-center justify-content-center h-100">
                <!-- IMAGEN -->
                <div class="col-md-6 col-12">
                    <img src="https://scontent.flim41-1.fna.fbcdn.net/v/t1.18169-9/19437516_432695567105977_4608653090080943003_n.jpg?_nc_cat=101&ccb=1-7&_nc_sid=5f2048&_nc_eui2=AeHECPhudLy9z7xzt2oBvtzB-T9h2X2E95v5P2HZfYT3m-fwoXwaCbqDzKwaZYL_a4U3vOoz52IC3aKKs3zxWnEw&_nc_ohc=bNFwV6NcxCUQ7kNvgGmajht&_nc_ht=scontent.flim41-1.fna&oh=00_AYAQWwrenCDHC1WhiwH_6sHHUojwMaRKuXrc1mK6HpkOGw&oe=668056C6" class="w-100 vh-100" style="object-fit: cover;">
                </div>

                <!-- FORMULARIO -->
                <div class="col-md-6 col-12" style="padding: 20px 30px;">
                    <form asp-controller="Acceso" asp-action="Index" method="post">
                        <h2 class="mb-3">Tienda Mallma´s</h2>

                        <!-- Email input -->
                        <div class="form-outline mb-4">
                            <label class="form-label" for="email">Correo electrónico:</label>
                            <input type="email" id="email" name="correo" class="form-control form-control-lg" autocomplete="off"/>                            
                        </div>

                        <!-- Password input -->
                        <div class="form-outline mb-4">
                            <label class="form-label" for="password">Contraseña:</label>
                            <input type="password" id="password" name="clave" class="form-control form-control-lg" autocomplete="off"/>
                        </div>

                        @if (ViewData["mensaje"] != null)
                        {
                            <div class="form-outline mb-4">
                                <div class="alert alert-danger" role="alert"> @ViewData["mensaje"]</div>
                            </div>

                        }

                        <div class="pt-1 mb-4">
                            <button class="btn btn-primary btn-lg btn-block" type="submit">Iniciar sesión</button>
                        </div>

                        <p>Desarrollado por Daryl Oscco Bustamante</p>

                    </form>
                </div>
            </div>
        </div>
    </section>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</html>